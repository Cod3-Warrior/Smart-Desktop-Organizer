<UserControl x:Class="SmartDesktopOrganizer.Controls.FolderPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartDesktopOrganizer.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="450">
    <UserControl.Resources>
        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3C3C3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4C4C4C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Save/Cancel Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4C4C4C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5C5C5C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Text Box Style -->
        <Style x:Key="RenameTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#0078D7"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <!-- Overlay Background -->
        <Border Background="Black" Opacity="0.7" MouseDown="Overlay_MouseDown"/>
        
        <!-- Folder Content -->
        <Border Width="320" Height="420" Background="#2C2C2C" CornerRadius="24"
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5" Color="Black"/>
            </Border.Effect>
            
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Folder Name Header - Display Mode -->
                <StackPanel x:Name="DisplayModePanel" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,0,0,16">
                    <TextBlock x:Name="FolderNameText" Text="Folder" 
                               Foreground="White" FontSize="24" FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    <Button x:Name="EditButton" Style="{StaticResource IconButtonStyle}" 
                            Click="EditButton_Click" Margin="8,0,0,0" ToolTip="Rename folder">
                        <TextBlock Text="✏️" FontSize="16"/>
                    </Button>
                </StackPanel>
                
                <!-- Folder Name Header - Edit Mode -->
                <StackPanel x:Name="EditModePanel" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,0,0,16"
                            Visibility="Collapsed">
                    <TextBox x:Name="FolderNameTextBox" Style="{StaticResource RenameTextBoxStyle}"
                             MinWidth="160" MaxWidth="220"
                             KeyDown="FolderNameTextBox_KeyDown"/>
                    <Button Content="✓" Style="{StaticResource ActionButtonStyle}" 
                            Click="SaveRename_Click" ToolTip="Save" Foreground="#4CAF50"/>
                    <Button Content="✗" Style="{StaticResource ActionButtonStyle}" 
                            Click="CancelRename_Click" ToolTip="Cancel" Foreground="#F44336"/>
                </StackPanel>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                    <WrapPanel x:Name="ItemsPanel" HorizontalAlignment="Center">
                        <!-- Items will be added here dynamically -->
                    </WrapPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
