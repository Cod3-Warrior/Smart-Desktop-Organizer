<Window x:Class="SmartDesktopOrganizer.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings"
        Width="850" Height="600"
        MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        ResizeMode="CanResize"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <!-- Sidebar Tab Button Style -->
        <Style x:Key="SidebarTabStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border" 
                                Background="Transparent" 
                                Padding="16,12" 
                                Cursor="Hand"
                                BorderThickness="0,0,3,0"
                                BorderBrush="Transparent">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="Icon" 
                                           Text="{TemplateBinding Tag}" 
                                           FontSize="16" 
                                           Margin="0,0,12,0"
                                           VerticalAlignment="Center"
                                           Foreground="#888"/>
                                <TextBlock x:Name="Label" 
                                           Text="{TemplateBinding Content}" 
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           Foreground="#CCC"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#333"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                                <Setter TargetName="Label" Property="Foreground" Value="White"/>
                                <Setter TargetName="Icon" Property="Foreground" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <!-- Settings Label Style -->
        <Style x:Key="SettingLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#CCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Settings Description Style -->
        <Style x:Key="SettingDescription" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>
        
        <!-- Modern Slider Style -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="TickFrequency" Value="10"/>
            <Setter Property="IsSnapToTickEnabled" Value="False"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernCombo" TargetType="ComboBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>
        
        <!-- Toggle Switch Style (CheckBox) -->
        <Style x:Key="ToggleSwitch" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="Track" 
                                    Width="44" Height="22" 
                                    CornerRadius="11" 
                                    Background="#444"
                                    Cursor="Hand"/>
                            <Border x:Name="Thumb" 
                                    Width="18" Height="18" 
                                    CornerRadius="9" 
                                    Background="White"
                                    HorizontalAlignment="Left"
                                    Margin="2,0,0,0"
                                    Cursor="Hand"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#0078D4"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="24,0,0,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Thumb" Property="Background" Value="#EEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1a8ae6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#006cc1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Grid.RowSpan="2" Background="#252525" BorderBrush="#333" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,16,0,0">
                <!-- Search Bar Placeholder -->
                <Border Margin="12,0,12,16" Background="#333" CornerRadius="4" Padding="10,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”" Foreground="#666" Margin="0,0,8,0"/>
                        <TextBlock Text="Search settings..." Foreground="#666" FontSize="12"/>
                    </StackPanel>
                </Border>
                
                <!-- Tab Buttons -->
                <RadioButton x:Name="TabGeneral" Content="General" Tag="ðŸ”§" Style="{StaticResource SidebarTabStyle}" GroupName="SettingsTabs"/>
                <RadioButton x:Name="TabAppearance" Content="Appearance" Tag="ðŸŽ¨" Style="{StaticResource SidebarTabStyle}" GroupName="SettingsTabs" IsChecked="True"/>
                <RadioButton x:Name="TabFolders" Content="Folders" Tag="ðŸ“" Style="{StaticResource SidebarTabStyle}" GroupName="SettingsTabs"/>
                <RadioButton x:Name="TabOrganization" Content="Organization" Tag="ðŸ“Š" Style="{StaticResource SidebarTabStyle}" GroupName="SettingsTabs"/>
                <RadioButton x:Name="TabIcons" Content="Icons &amp; Shortcuts" Tag="ðŸ”—" Style="{StaticResource SidebarTabStyle}" GroupName="SettingsTabs"/>
                <RadioButton x:Name="TabPerformance" Content="Performance" Tag="âš¡" Style="{StaticResource SidebarTabStyle}" GroupName="SettingsTabs"/>
                <RadioButton x:Name="TabBackup" Content="Backup &amp; Safety" Tag="ðŸ’¾" Style="{StaticResource SidebarTabStyle}" GroupName="SettingsTabs"/>
                <RadioButton x:Name="TabAdvanced" Content="Advanced" Tag="âš™ï¸" Style="{StaticResource SidebarTabStyle}" GroupName="SettingsTabs"/>
            </StackPanel>
        </Border>
        
        <!-- Content Area -->
        <ScrollViewer Grid.Column="1" Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="24">
            <Grid>
                <!-- Appearance Tab -->
                <StackPanel x:Name="AppearanceContent" Visibility="Visible">
                    <TextBlock Text="Appearance" Style="{StaticResource SectionHeader}"/>
                    
                    <!-- Theme -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Theme" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Choose the color theme for the application" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <ComboBox x:Name="ThemeCombo" Grid.Column="1" Style="{StaticResource ModernCombo}" SelectedIndex="1">
                            <ComboBoxItem Content="Light"/>
                            <ComboBoxItem Content="Dark"/>
                            <ComboBoxItem Content="System"/>
                            <ComboBoxItem Content="Custom"/>
                        </ComboBox>
                    </Grid>
                    
                    <!-- Icon Size -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Icon Size" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Adjust the size of desktop icons" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Small" Foreground="#888" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                            <Slider x:Name="IconSizeSlider" Width="180" VerticalAlignment="Center" 
                                    Minimum="48" Maximum="128" Value="64" 
                                    TickFrequency="16" IsSnapToTickEnabled="True"
                                    ValueChanged="IconSizeSlider_ValueChanged"/>
                            <TextBlock Text="Large" Foreground="#888" VerticalAlignment="Center" Margin="8,0,0,0" FontSize="11"/>
                            <TextBlock x:Name="IconSizeValue" Text="64px" Foreground="White" Margin="12,0,0,0" VerticalAlignment="Center" Width="45"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Grid Spacing -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Grid Spacing" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Space between icons in the grid" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Tight" Foreground="#888" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                            <Slider x:Name="GridSpacingSlider" Width="180" VerticalAlignment="Center" 
                                    Minimum="10" Maximum="40" Value="20"
                                    ValueChanged="GridSpacingSlider_ValueChanged"/>
                            <TextBlock Text="Wide" Foreground="#888" VerticalAlignment="Center" Margin="8,0,0,0" FontSize="11"/>
                            <TextBlock x:Name="GridSpacingValue" Text="20px" Foreground="White" Margin="12,0,0,0" VerticalAlignment="Center" Width="45"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Folder Preview Style -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Folder Preview Style" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="How folder contents are displayed in thumbnails" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <ComboBox x:Name="FolderPreviewCombo" Grid.Column="1" Style="{StaticResource ModernCombo}" SelectedIndex="0">
                            <ComboBoxItem Content="2Ã—2 Grid"/>
                            <ComboBoxItem Content="3Ã—3 Grid"/>
                            <ComboBoxItem Content="Stacked (iOS)"/>
                            <ComboBoxItem Content="Single Large Icon"/>
                        </ComboBox>
                    </Grid>
                    
                    <!-- Animation Speed -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Animation Speed" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Speed of fly-in, jiggle, and preview animations" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Fast" Foreground="#888" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                            <Slider x:Name="AnimationSpeedSlider" Width="180" VerticalAlignment="Center" 
                                    Minimum="0.5" Maximum="2.0" Value="1.0"
                                    TickFrequency="0.25" IsSnapToTickEnabled="True"/>
                            <TextBlock Text="Slow" Foreground="#888" VerticalAlignment="Center" Margin="8,0,0,0" FontSize="11"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Wallpaper Sync -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Wallpaper Sync" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Sync overlay background with Windows wallpaper" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <CheckBox x:Name="WallpaperSyncToggle" Grid.Column="1" Style="{StaticResource ToggleSwitch}" IsChecked="True"/>
                    </Grid>
                    
                    <!-- Icon Labels -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Icon Labels" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="When to show icon text labels" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <ComboBox x:Name="LabelVisibilityCombo" Grid.Column="1" Style="{StaticResource ModernCombo}" SelectedIndex="0">
                            <ComboBoxItem Content="Always Show"/>
                            <ComboBoxItem Content="Hover Only"/>
                            <ComboBoxItem Content="Hidden"/>
                        </ComboBox>
                    </Grid>
                    
                    <!-- Mini Preview Widget -->
                    <Border Margin="0,20,0,0" Background="#2A2A2A" CornerRadius="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Live Preview" FontSize="12" Foreground="#888" Margin="0,0,0,12"/>
                            <Border Background="#1E1E1E" CornerRadius="4" Padding="16" Height="120">
                                <UniformGrid x:Name="PreviewGrid" Rows="2" Columns="4">
                                    <!-- Sample icons for preview -->
                                </UniformGrid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Icons Tab -->
                <StackPanel x:Name="IconsContent" Visibility="Collapsed">
                    <TextBlock Text="Icons &amp; Shortcuts" Style="{StaticResource SectionHeader}"/>
                    
                    <!-- Remove Shortcut Arrows -->
                    <Border Background="#2A2A2A" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Remove Shortcut Arrows" Style="{StaticResource SettingLabel}" FontWeight="SemiBold"/>
                                <TextBlock Style="{StaticResource SettingDescription}" Margin="0,4,0,0">
                                    <Run Text="Remove arrow overlay from all shortcut icons system-wide."/>
                                    <LineBreak/>
                                    <Run Text="âš ï¸ Requires administrator privileges and Explorer restart." Foreground="#FFA500"/>
                                </TextBlock>
                            </StackPanel>
                            <CheckBox x:Name="RemoveArrowsToggle" Grid.Column="1" Style="{StaticResource ToggleSwitch}" 
                                      VerticalAlignment="Center" Checked="RemoveArrowsToggle_Changed" Unchecked="RemoveArrowsToggle_Changed"/>
                        </Grid>
                    </Border>
                    
                    <!-- Refresh Icons Button -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Refresh Icon Cache" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Clear and rebuild the icon cache for all items" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <Button x:Name="RefreshIconsBtn" Grid.Column="1" Content="Refresh Now" Style="{StaticResource SecondaryButton}"
                                Click="RefreshIconsBtn_Click"/>
                    </Grid>
                    
                    <!-- High-DPI Mode -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="High-DPI Scaling" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Icon rendering quality on high-resolution displays" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <ComboBox x:Name="DpiModeCombo" Grid.Column="1" Style="{StaticResource ModernCombo}" SelectedIndex="0">
                            <ComboBoxItem Content="Best Quality"/>
                            <ComboBoxItem Content="Performance"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
                
                <!-- Organization Tab -->
                <StackPanel x:Name="OrganizationContent" Visibility="Collapsed">
                    <TextBlock Text="Organization" Style="{StaticResource SectionHeader}"/>
                    
                    <!-- Default Sort -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Default Sort Mode" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="How items are sorted by default" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <ComboBox x:Name="SortModeCombo" Grid.Column="1" Style="{StaticResource ModernCombo}" SelectedIndex="0">
                            <ComboBoxItem Content="Manual"/>
                            <ComboBoxItem Content="Name (A-Z)"/>
                            <ComboBoxItem Content="Date Modified"/>
                            <ComboBoxItem Content="Type"/>
                            <ComboBoxItem Content="Size"/>
                        </ComboBox>
                    </Grid>
                    
                    <!-- Sort Direction -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Sort Direction" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="Ascending (A-Z, oldest first) or Descending (Z-A, newest first)" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <RadioButton x:Name="SortAscending" Content="Ascending â†‘" Foreground="White" IsChecked="True" Margin="0,0,16,0"/>
                            <RadioButton x:Name="SortDescending" Content="Descending â†“" Foreground="White"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Auto-Sort -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Auto-Sort Trigger" Style="{StaticResource SettingLabel}"/>
                            <TextBlock Text="When to automatically re-sort items" Style="{StaticResource SettingDescription}"/>
                        </StackPanel>
                        <ComboBox x:Name="AutoSortCombo" Grid.Column="1" Style="{StaticResource ModernCombo}" SelectedIndex="0">
                            <ComboBoxItem Content="Never"/>
                            <ComboBoxItem Content="Daily"/>
                            <ComboBoxItem Content="When new item added"/>
                        </ComboBox>
                    </Grid>
                    
                    <!-- Rule-based Organization (Stub) -->
                    <Border Background="#2A2A2A" CornerRadius="8" Padding="16" Margin="0,20,0,0" Opacity="0.6">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Rule-Based Organization" Style="{StaticResource SettingLabel}" FontWeight="SemiBold"/>
                                <Border Background="#0078D4" CornerRadius="3" Padding="6,2" Margin="12,0,0,0">
                                    <TextBlock Text="COMING SOON" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Style="{StaticResource SettingDescription}">
                                <Run Text="Create powerful rules like 'Move .png/.jpg to Images folder' or 'Group productivity apps together'."/>
                                <LineBreak/>
                                <Run Text="Inspired by Stardock Fences â€“ coming in a future update!" Foreground="#0078D4"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Placeholder for other tabs -->
                <StackPanel x:Name="ComingSoonContent" Visibility="Collapsed">
                    <TextBlock x:Name="ComingSoonTitle" Text="Coming Soon" Style="{StaticResource SectionHeader}"/>
                    <Border Background="#2A2A2A" CornerRadius="8" Padding="24" HorizontalAlignment="Left">
                        <StackPanel>
                            <TextBlock Text="ðŸš§" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                            <TextBlock Text="This settings tab is under development." Foreground="#CCC" FontSize="14" HorizontalAlignment="Center"/>
                            <TextBlock Text="Check back in a future update!" Foreground="#888" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <Border Grid.Column="1" Grid.Row="1" Background="#252525" Padding="24,16" BorderBrush="#333" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ApplyBtn" Content="Apply" Style="{StaticResource SecondaryButton}" Margin="0,0,12,0" Click="ApplyBtn_Click"/>
                <Button x:Name="CancelBtn" Content="Cancel" Style="{StaticResource SecondaryButton}" Margin="0,0,12,0" Click="CancelBtn_Click"/>
                <Button x:Name="OKBtn" Content="OK" Style="{StaticResource PrimaryButton}" Click="OKBtn_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
